<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%p %d{dd MMM yyyy HH:mm:ss,SSS} [%t] - %m%n"/>
        </Console>
        <RollingFile name="rootLogger" fileName="./logs/kafka-opentsdb.log"
                     filePattern="./logs/kafka-opentsdb.log.%i.gz">
            <PatternLayout pattern="%p %d{dd MMM yyyy HH:mm:ss,SSS} [%t] - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <RollingFile name="exceptionLogger"
                     fileName="./logs/kafka-opentsdb-exceptions.log"
                     filePattern="./logs/kafka-opentsdb-exceptions.log.%i.gz">
            <PatternLayout pattern="%p %d{dd MMM yyyy HH:mm:ss,SSS} [%t] - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="stdout"/>
        </Root>
        <Logger name="rootLogger" level="info">
            <AppenderRef ref="rootLogger"/>
        </Logger>
        <Logger name="exceptionLogger" level="info">
            <AppenderRef ref="exceptionLogger"/>
        </Logger>
    </Loggers>
</Configuration>